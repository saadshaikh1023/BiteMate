<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Secondary"
    tools:context=".auth.LoginActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/logo_animation1"
        android:layout_width="411dp"
        android:layout_height="340dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_fileName="food-vlogger.json"
        app:lottie_loop="true"
        app:lottie_speed="1">

    </com.airbnb.lottie.LottieAnimationView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:elegantTextHeight="false"
        android:elevation="20sp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="top|center"

        android:shadowColor="#000000"
        android:shadowDx="10"
        android:singleLine="false"
        android:soundEffectsEnabled="false"
        android:text="Login"
        android:textColor="@color/BLUE"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_animation1">

    </TextView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/numberLayout"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="88dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_animation1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:text="Enter your number" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/white">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="10dp"
                    android:hint="Number"
                    android:inputType="number"
                    android:textColor="@color/black" />


            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/sendOtp"
                android:layout_width="275dp"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:text="Send Otp"
                android:textColor="@color/BLUE"
                android:background="@drawable/radius"
                android:textSize="20dp"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>







    <com.google.android.material.card.MaterialCardView
        android:id="@+id/otpLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="88dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_animation1"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userOtpText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Enter the OTP" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/white">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/otp_authenticator_svgrepo_com"
                    android:drawablePadding="10dp"
                    android:hint="OTP"
                    android:inputType="number"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/verifyOtp"
                android:layout_width="275dp"
                android:layout_height="65dp"
                android:text="Verify OTP"
                android:textColor="@color/BLUE"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:layout_marginTop="390dp"
        android:text="copyright Â©2003-2023 - BiteMate - All rights reserved"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="200dp" />

</androidx.constraintlayout.widget.ConstraintLayout>